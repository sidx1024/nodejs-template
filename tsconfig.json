{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "skipLibCheck": true,
    "strict": true,
    "checkJs": true,
    "rootDir": "."
  },
  "include": ["src", "tests"],
  "paths": {
    "#utils/*": ["./src/utils/"]
  }
}
